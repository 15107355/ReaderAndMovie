<view>
  <swiper indicator-dots="true" autoplay="true">
    <swiper-item>
      <image src="http://img05.tooopen.com/images/20150515/tooopen_sy_124560378935.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="http://img06.tooopen.com/images/20170114/tooopen_sy_197005712172.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="http://img02.tooopen.com/images/20151127/tooopen_sy_149674953835.jpg"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{post_key}}" wx:for-item="item">
    <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{item.avatar}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <text class="post-title">{{item.title}}</text>
      <image class="post-image" src="{{item.imgSrc}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="http://p2.pstatp.com/large/7294/6608368946"></image>
        <text class="post-like-font">{{item.reading}}</text>
        <image class="post-like-image" src="http://p2.pstatp.com/large/3759/2091335020"></image>
        <text class="post-like-font">{{item.collection}}</text>
      </view>
    </view>
  </block>
</view>