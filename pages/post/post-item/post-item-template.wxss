.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  /*border-top: 1px solid #ededed;*/
  padding-bottom: 10px;
}

.post-author-date {
  /*margin-top: 10rpx;
    margin-bottom: 20rpx;*/
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
  /*头像为圆形*/
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  /*垂直居中排布*/
  margin-bottom: 5rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image {
  width: 100%;
  margin-top: 16px;
  height: 340rpx;
  margin: auto 0;
  /*margin-bottom: 15px;*/
}

.post-content {
  color: #666;
  font-size: 32rpx;
  /*margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;*/
  margin: 20rpx;
  letter-spacing: 1rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 16px;
}

.post-like-image {
  height: 16px;
  width: 16px;
  border-radius: 50%;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
